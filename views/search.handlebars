<form id="advanced-search-form" class="col-auto">
    <input id="advanced-searchbar" type="search" placeholder="Search Snodes...">
    <input type="submit" value="Search">
</form>

<script src="./js/advancedSearch.js"></script>

{{#each codesnips as |snode|}}
<div class="row mb-4 blogpost">
  <div class="col-md-5">
    <h2>
      <a href="/blogpost/{{snode.id}}">{{snode.description}}</a>
    </h2>
    <p>Written by <a href="/profile/{{snode.user.id}}">{{snode.user.name}}</a> on {{format_date snode.date}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{snode.content}}
    </p>
  </div>
</div>
{{/each}}