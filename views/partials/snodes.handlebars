<!-- Loop over each object in the snodes array -->
{{#each snodes as |snode|}}
<div class="row mb-5 pb-3 post bg-light">
  <div class="col-md-4">
    <h2>{{snode.description}}</a></h2>
    <p>Published by <a href="/profile/{{snode.user_id}}">{{snode.user.name}}</a> on {{format_date snode.date}}</p>
    <div class="fav-status d-flex justify-content-start p-1">
      <i snodeid="{{snode.id}}" isFav="{{if_contains snode.id ../user.favorites}}" onclick="favorite(this)" class="fa fa-heart fa-heart-o"></i>
      <p class="p-1 pl-2 favCount">{{snode.favorited}}</p>
    </div>
  </div>
  <div class="col-md-7 p-2 content" snodeid="{{snode.id}}" onclick="clickcopy(this)">
    <pre class="border p-2 rounded bg-white">{{snode.content}}</pre>
    <button>ðŸ“‹ Click Anywhere to Copy</button>
    <p class="mt-4">Tags: {{extract_tagNames snode.tags}}</p>
  </div>
</div>
{{/each}}

<script src="/js/copySnode.js"></script>
<script src="/js/favorites.js"></script>